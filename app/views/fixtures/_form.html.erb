<%= form_with(model: fixture, local: true) do |form| %>
  <% if fixture.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(fixture.errors.count, "error") %> <%= t(".error") %></h2>

      <ul>
      <% fixture.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :home_team_id %>
    <%= form.collection_select(:home_team_id, Team.all, :id, :name, :prompt => true) %>
  </div>

  <div class="field">
    <%= form.label :away_team_id %>
    <%= form.collection_select(:away_team_id, Team.all, :id, :name, :prompt => true) %>
  </div>

  <div class="field">
    <%= form.label :home_score %>
    <%= form.number_field :home_score %>
  </div>

  <div class="field">
    <%= form.label :away_score %>
    <%= form.number_field :away_score %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
