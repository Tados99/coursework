<p id="notice"><%= notice %></p>

<h1><%= t('.playerList') %></h1>
<p>
  <button><%= link_to t('.newPlayer'), new_player_path %></button>
</p>

<table>
  <thead>
    <tr>
      <th><%= t('.team') %></th>
      <th><%= t('.surname') %></th>
      <th><%= t('.forename') %></th>
      <th><%= t('.dob') %></th>
      <th><%= t('.played') %></th>
      <th><%= t('.scores') %></th>
      <th><%= t('.assists') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.team.name %></td>
        <td><%= player.surname %></td>
        <td><%= player.forename %></td>
        <td><%= player.dob %></td>
        <td><%= player.games_played %></td>
        <td><%= player.scores %></td>
        <td><%= player.assists %></td>
        <td><%= link_to t('.show'), player %></td>
        <td><%= link_to t('.edit'), edit_player_path(player) %></td>
        <td><%= link_to t('.delete'), player, method: :delete, data: { confirm: t('.sure') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
