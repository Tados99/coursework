<p id="notice"><%= notice %></p>

<h1>Teams</h1>

<p>

<button><%= link_to 'Add a new team', new_team_path(team_id: @team) %></button>

</p>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>City</th>
      <th>Establishment year</th>
      <th>Championships won</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= link_to team.name, team %></td>
        <td><%= team.city %></td>
        <td><%= team.est_year %></td>
        <td><%= team.championships_won %></td>
        <td><%= link_to 'Delete', team, method: :delete, data: { confirm: 'Are you sure?' } %> </td>
      </tr>
    <% end %>
  </tbody>
</table>
