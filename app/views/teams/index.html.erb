<p id="notice"><%= notice %></p>

<h1>Teams</h1>

<p>
<button><%= link_to t('.newTeam'), new_team_path(team_id: @team) %></button>
<br><br>
<%=t('.clickOn')%>
</p>

<table>
  <thead>
    <tr>
      <th><%=t('.name')%></th>
      <th><%=t('.city')%></th>
      <th><%=t('.estYear')%></th>
      <th><%=t('.champships')%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= link_to team.name, team %></td>
        <td><%= team.city %></td>
        <td><%= team.est_year %></td>
        <td><%= team.championships_won %></td>
        <td><%= link_to t('.delete'), team, method: :delete, data: { confirm: 'Are you sure?' } %> </td>
      </tr>
    <% end %>
  </tbody>
</table>
